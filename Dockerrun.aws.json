{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "grav",
      "image": "rogerhutchings/grav-sites:spark",
      "essential": true,
      "memoryReservation": "768",
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-grav",
          "containerPath": "/var/log/nginx"
        }
      ],
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 80
        }
      ]
    },
    {
      "name": "https-redirect",
      "image": "geldim/https-redirect",
      "essential": true,
      "memory": "64",
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ]
}
