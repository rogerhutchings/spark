{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "grav",
      "image": "rogerhutchings/grav-php-nginx",
      "essential": true,
      "memory": "256",
      "mountPoints": [
        {
          "sourceVolume": "userDir",
          "containerPath": "/usr/share/nginx/html/user"
        },
        {
          "sourceVolume": "awseb-logs-grav",
          "containerPath": "/var/log/nginx"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "userDir",
      "host": {
        "sourcePath": "/var/app/current/user"
      }
    }
  ]
}
