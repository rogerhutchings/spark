  {
    title: 'International',
    bg: url('theme://images/international.jpg'),
    bgPos: '',
    icon: 'svgs/international.svg.twig',
    slug: 'international'
  }
] %}

{% set latestLinks = [
  {
    title: 'Blog',
    url: '/blog',
    bgClass: 'img-laptop'
  },
  {
    title: 'Clients in the News',
    url: '/coverage',
    bgClass: 'img-trophy'
  },
  {
    title: 'Case Studies',
    url: '/our-work',
    bgClass: 'img-bike'
  }
] %}

{% block hero %}

  <section class="flex-one mt5">
    <h1 class="f1 fw4 white ma0 mb4 mw6 lh-title">
      Story-driven PR and content that deliver business impact
    </h1>
    <a href="/contact-us" class="f6 link br-pill ph4 pv2 mb2 dib white bg-orange bg-animate hover-bg-white hover-orange ttu">
      Contact us
    </a>
  </section>

  <section class="mw8 cf w-100 bg-white center pv4 mt5 mb-23 relative z-2 tc ttu fw4">
    {% for link in heroLinks %}
      <a href={{ link.url }} class="fl w-100 w-third-ns db link black hover-orange hover-fill-orange">
        <div class="aspect-ratio aspect-ratio--8x5 w-50 center">
          {% include link.icon with { class: 'aspect-ratio--object' } %}
        </div>
        <div class="">
          <div class="f3 db pv2">
            {{ link.title }}
          </div>
          <div class="f6 db pv2">
            {{ link.subtitle }}
          </div>
        </div>
      </a>
    {% endfor %}
  </section>

{% endblock %}

{% block body %}
  <article id="body" class="mw8 center  mh3 mb3 mt4 mh4-ns mb4-ns mt4-ns relative z-1">

    <section class="bg-grey pt6 pb4 ph3 ph6-ns tc white f4 fw1">
      {{ content }}
      <a href="#" class="f6 link br-pill ph4 pv2 mb2 dib white bg-orange bg-animate hover-bg-white hover-orange normal ttu">
        Join us
      </a>
    </section>

    <ul class="list pl0 cf mt0 mb0">
      {% for link in panelLinks %}
        <li class="fl w-50 w-third-ns">
          <div class="aspect-ratio aspect-ratio--1x1 ">
            <a
              class="aspect-ratio--object db link orange hover-white fill-orange hover-fill-white"
              href="/services#{{ link.slug }}"
            >
              <img
                aria-hidden="true"
                class="db bg-center cover aspect-ratio--object blank"
                style="background: url({{ link.bg }});"
                alt=""
              />
              <div aria-hidden="true" class="db aspect-ratio--object blank bg-overlay-purple bg-overlay-orange-hover"></div>
              <div class="aspect-ratio--object flex flex-column items-center justify-center pe-none">
                {% include link.icon with { class: 'w-third', noBg: true } %}
                <span class="ttu z-9999 pe-none dib tc mt2">
                  {{ link.title }}
                </span>
              </div>
            </a>
          </div>
        </li>
      {% endfor %}
    </ul>

    <section class="cf w-100 bg-grey ph4 ph5-ns pb5">
      <h3 class="orange ttu tc fw6 f3 pv3">
        Spark Latest
      </h3>
      {% for link in latestLinks %}
        <a href="{{ link.url }}" class="fl w-100 w-third-ns link-span-white link-span-bg-orange link-span-hover-bg-white link-span-hover-orange">
          <div class="aspect-ratio aspect-ratio--1x1 relative">
            <div aria-hidden="true" class="db bg-center cover aspect-ratio--object {{ link.bgClass }}"></div>
            <span class="ttu bg-animate f4 db tc pv2 fw6 bottom-0 absolute w-100 z-9999">
              {{ link.title }}
            </span>
          </div>
        </a>
      {% endfor %}
    </section>

  </article>

{% endblock %}
