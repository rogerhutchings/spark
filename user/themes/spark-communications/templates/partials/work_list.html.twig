<ul class="list pl0 cf mt4 mb0 bg-black">
  {% for p in collection %}

    {% if p.header.company_logo_background_image %}
      {% set bgImage = '/' ~ p.header.company_logo_background_image|first.path %}
    {% else %}
      {% set bgImage = 'https://placeimg.com/500/500/animals' %}
    {% endif %}

    <li class="fl w-50 w-third-ns">
      <div class="aspect-ratio aspect-ratio--1x1 ">
        <a
          class="aspect-ratio--object db link overlay-bg-o80-black overlay-bg-o80-orange-hover"
          href="{{ p.url }}"
        >
          <div
            aria-hidden="true"
            class="db bg-center cover aspect-ratio--object blank"
            style="background-image: url({{ bgImage }});"
          ></div>
          <div
            name="overlay"
            aria-hidden="true"
            class="db aspect-ratio--object blank"
          ></div>
          <div class="aspect-ratio--object flex flex-column items-center justify-center pe-none">
            <span class="ttu z-9999 pe-none dib tc mt2">
              {% if p.header.company_logo_image %}
                <img
                  alt="{{ p.title }} case study"
                  class="w-50"
                  src="{{ '/' ~ p.header.company_logo_image|first.path }}"
                />
              {% else %}
                {{ p.title }}
              {% endif %}
            </span>
          </div>
        </a>
      </div>
    </li>
  {% endfor %}
</ul>
