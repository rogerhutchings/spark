{% extends 'blog/blog_layout.html.twig' %}
{% set collection = page.collection() %}

{% block headerClasses %}
  bg-img-laptop bg-y-40
{% endblock headerClasses %}

{% block blog_content %}

  {% for child in collection %}
    {% include 'blog/blog_list_item.html.twig' with {
      'blog': page,
      'page': child,
      'loop': loop
    } %}
  {% endfor %}

  {% if config.plugins.pagination.enabled and collection.params.pagination %}
    {% include 'blog/pagination.html.twig' with {
      'base_url': page.url,
      'pagination': collection.params.pagination
    } %}
  {% endif %}

{% endblock blog_content %}
